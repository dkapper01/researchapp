extends layout

block content
  //h5=title
  .table-responsive
    table.table.table-striped.table-hover.table-bordered.table-margin
      thead
        //tr
        th #
        th Firms
        th Status
        th Created At
      tbody
        - var count = 0
        each firm in list_firms
          tr
            td(class='count_width') #{++count}
            td(class='main_width')
              a(href=firm.url) #{firm.firm_name}
            td
                if firm.status == 'Not Finished'
                    span.text-danger #{firm.status}
                if firm.status == "Finished"
                    span.text-success #{firm.status}
            td #{firm.created_at_yyyy_mm_dd}

