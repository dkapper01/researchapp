extends auth_layout

block content
    .container
        form.form-signin(role='form', action="/register",method="POST", style='max-width: 300px;')
            h2.form-signin-heading Sign Up here
            input.form-control(type='text', name="user_name", required='true', placeholder='Your Name')
            input.form-control(type='text', name="username", required='true', placeholder='Your Username')
            input.form-control(type='password', name="password", required='true', placeholder='Your Password')
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up
