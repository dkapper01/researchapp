extends layout

block content

  h1= title
  
  p #[strong Do you really want to delete this CompnayInstance?]
  
  div(style="margin-left:20px")

    p #[strong ID]: #{companyinstance._id}
  
    p #[strong Title:] 
      a(href=companyinstance.company.url) #{companyinstance.company.title}
    
    p #[strong Imprint:] #{companyinstance.imprint}

    p #[strong Status:] 
      if companyinstance.status=='Available'
        span.text-success #{companyinstance.status}
      else if companyinstance.status=='Maintenance'
        span.text-danger #{companyinstance.status}
      else
        span.text-warning #{companyinstance.status}
      
    if companyinstance.status!='Available'
      p #[strong Due back:] #{companyinstance.due_back_formatted}

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=companyinstance._id )

    button.btn.btn-primary(type='submit') Delete