extends layout

block content

  h1 Delete Firm: #{firm.name}
  
  if firm_companys.length
  
    p #[strong Delete the following companys before attempting to delete this firm.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Compnays
    
      dl
      each company in firm_companys
        dt 
          a(href=company.url) #{company.title}
        dd #{company.leadership_page_url}

  else
    p Do you really want to delete this Firm?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=firm._id )

      button.btn.btn-primary(type='submit') Delete